{#首页内容列表模板#}

{% extends 'themes/cozastore/base.html.twig' %}

{% block title %}
    内容列表-{{ taxonomyEntity.taxonomyWord }}
{% endblock %}

{% block seo_meta %}
    <meta name="description" content="内容列表-{{ taxonomyEntity.taxonomyWord }},{{ system.siteDescription }}"/>
    <meta name="keywords" content="{{ taxonomyEntity.taxonomyWord }},{{ system.siteSubTitle }}"/>
{% endblock %}

{% block content %}
    {% include 'themes/cozastore/header.html.twig' %}

    {% include 'themes/cozastore/footer.html.twig' %}
{% endblock %}

{% block base_javascripts %}
    {{ parent() }}
    {#当前页面得把页头MENU背景改为白色，用jquery修改吧#}
    <script>
        $(document).ready(function(){
            $("header").addClass("header-v4");
        });
    </script>
{% endblock %}